@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<div class="flex flex-col items-center text-center">
    <h2 id="details-heading" class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Your Cart is Empty!</h2>
    <p class="mt-3 max-w-3xl text-lg text-gray-600">
        It seems like you haven't added any products to your cart yet. Before you can proceed to checkout, let's fill it up with some exciting items! Visit our categories and add your favorite products to the cart. We're sure you'll find something you'll love!
    </p>
    <a href="/" class="mt-4 px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
        Start Shopping
    </a>
</div>
